# ─── Server ───────────────────────────────────────────────
PORT=5000
CLIENT_URL=http://localhost:5173
SERVER_URL=https://your-server-domain.com

# ─── Firebase ─────────────────────────────────────────────
# Paste your Firebase service account JSON as a single-line string
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ─── M-Pesa (Daraja API) ──────────────────────────────────
# Get from https://developer.safaricom.co.ke
MPESA_ENV=sandbox
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_lipa_na_mpesa_online_passkey

# ─── Stripe ───────────────────────────────────────────────
# Get from https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ─── Email (Gmail SMTP) ───────────────────────────────────
# Use Gmail with App Password (not your regular password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=bookings@geraniumcleaning.co.ke
SMTP_PASS=your_gmail_app_password

# ─── Admin ────────────────────────────────────────────────
ADMIN_EMAIL=bookings@geraniumcleaning.co.ke
ADMIN_PASSWORD=change_this_strong_password
JWT_SECRET=a_very_long_random_secret_string_change_in_production
